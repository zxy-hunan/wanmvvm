<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zyx_hunan.wanmvvm">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WanApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.WanMvvm">
        <activity android:name=".ui.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.RegisterAcy"/>
        <activity android:name=".ui.view.LoginAcy"/>
        <activity android:name=".ui.view.ArticleItemAcy"/>
        <activity android:name=".ui.view.SettingAcy"/>
        <activity android:name=".ui.view.acy.VideoListActivity"/>
        <activity android:name=".ui.view.acy.VideoPagerActivity"/>
    </application>

</manifest>