<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >
    <!--设置背景颜色-->
    <solid
        android:color="#ffffff"
        >
    </solid>
    <!--弧度-->
    <corners
        android:radius="5dp"
        ></corners>
    <!--内边距-->
    <padding
        android:top="2dp"
        android:bottom="2dp"
        android:left="3dp"
        android:right="5dp"
        ></padding>
    <!--边框-->
    <stroke
        android:width="1dp"
        android:color="@color/btn_ghost_blue_border_normal"
        >
    </stroke>
</shape>